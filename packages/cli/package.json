{
  "private": true,
  "name": "@frostleaf/cli",
  "version": "0.1.0",
  "scripts": {
    "check": "tsc",
    "build": "run-p build:src build:bin",
    "build:src": "esbuild --platform=node --bundle --outfile=dist/main.js --external:esbuild --external:@babel/core --external:@babel/plugin-transform-typescript --external:@babel/plugin-transform-react-jsx src/main.ts",
    "build:bin": "esbuild --platform=node --outfile=dist/bin/frostleaf.js --format=cjs bin/frostleaf.ts",
    "main": "node dist/main.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "bin": {
    "frostleaf": "./dist/bin/frostleaf.js"
  },
  "dependencies": {
    "@babel/core": "7.18.2",
    "@babel/plugin-transform-typescript": "7.17.12",
    "@babel/plugin-transform-react-jsx": "7.17.12",
    "@frostleaf/core": "workspace:../core",
    "esbuild": "0.14.42"
  },
  "devDependencies": {
    "@frostleaf/eslint-config": "workspace:../eslint-config",
    "@frostleaf/tsconfig": "workspace:../tsconfig",
    "@types/babel__core": "7.1.19",
    "@types/estree": "0.0.51",
    "@types/node": "17.0.36",
    "@typescript-eslint/eslint-plugin": "5.27.0",
    "@typescript-eslint/parser": "5.27.0",
    "arg": "5.0.1",
    "chalk": "5.0.1",
    "eslint": "8.16.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.6.2",
    "typescript": "4.7.2"
  }
}
