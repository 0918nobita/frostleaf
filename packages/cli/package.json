{
  "private": true,
  "name": "@frostleaf/cli",
  "version": "0.1.0",
  "scripts": {
    "check": "tsc",
    "build": "run-p build:src build:bin",
    "build:src": "esbuild --platform=node --bundle --outfile=dist/main.js --external:esbuild --external:@frostleaf/build-time src/main.ts",
    "build:bin": "esbuild --platform=node --outfile=dist/bin/frostleaf.js --format=cjs bin/frostleaf.ts",
    "main": "node dist/main.js",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write ."
  },
  "bin": {
    "frostleaf": "./dist/bin/frostleaf.js"
  },
  "dependencies": {
    "esbuild": "0.14.42"
  },
  "devDependencies": {
    "@frostleaf/build-time": "workspace:../build-time",
    "@types/estree": "0.0.51",
    "@types/node": "17.0.36",
    "@typescript-eslint/eslint-plugin": "5.27.0",
    "@typescript-eslint/parser": "5.27.0",
    "arg": "5.0.1",
    "chalk": "5.0.1",
    "eslint": "8.16.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.6.2",
    "typescript": "4.7.2"
  }
}
